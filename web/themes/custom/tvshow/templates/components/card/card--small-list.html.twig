{% set el = 'c-small-list' %}

<div class="{{ el }}">
	<div class="{{ el ~ '__inner' }}">
		{% if media|render %}
			<div class="{{ el ~ '__media' }}">
				{{ media }}
			</div>
		{% endif %}
		<div class="{{ el ~ '__content' }}">
			{% if gutter|render %}
				<div class="{{ el ~ '__gutter' }}">{{ gutter }}</div>
			{% endif %}
			{% if title|render %}
				<div class="{{ el ~ '__title' }}">{{ title }}</div>
			{% endif %}
		</div>
	</div>
</div>

