{% set el = 'c-partner' %}

<a class="{{ el }}" href="{{ url|render|striptags|trim }}">
	<div class="{{ el ~ '__inner' }}">
		{% if media|render %}
			<div class="{{ el ~ '__media' }}">
				{{ media }}
			</div>
		{% endif %}
		<div class="{{ el ~ '__content' }}">
			{% if title|render %}
				<div class="{{ el ~ '__title' }}">{{ title }}</div>
			{% endif %}
			{% if description|render %}
				<div class="{{ el ~ '__description' }}">{{ description }}</div>
			{% endif %}
		</div>
	</div>
</a>

